library project OpenGL is

   type Os_Type is
      ("Windows", "Linux", "MacOSX");
   Os : Os_Type := external ("OS", "Linux");

   for Library_Name use "OpenGLAda";
   case Os is
      when "Windows" => for Source_Dirs use ("src/gl", "src/gl/windows");
      when "Linux" => for Source_Dirs use ("src/gl", "src/gl/x11");
      when "MacOSX" => for Source_Dirs use ("src/gl", "src/gl/mac");
   end case;

   for Object_Dir use "obj";
   for Library_Dir use "lib";

   package Ide is
      for Vcs_Kind use "Git";
   end Ide;

   package Builder is
      for Default_Switches ("ada") use ("-s");
   end Builder;

   package Compiler is
      for Default_Switches ("ada") use ("-gnat05", "-gnatn", "-fstack-check");
   end Compiler;

   package Linker is
      case Os is
         when "Windows" =>
            for Linker_Options use ("-lOpenGL32", "-lGdi32");

         when "Linux" =>
            for Linker_Options use ("-lGL", "-lX11");

         when "MacOSX" =>
            for Linker_Options use ("-Wl,-framework,OpenGL,-framework,CoreFoundation");
      end case;
   end Linker;

end OpenGL;
